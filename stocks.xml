<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">

  <test  name="Buy the Stocks ">
    <classes>
      <class name="TestCases.DoLogin">
      	<methods>
      	<include name="doLogin"/>
      	<include name="selectPortfolio"/>
      	</methods>
      </class>
      <class name="TestCases.StockManagement">
      	<methods>
	      	<include name="goToCompany"/>
	      	<include name="buyTheStock"/>
      	</methods>
      </class>
    </classes>
  </test> 
  <test  name="Sell the Stocks">
    <classes>
    	 <class name="TestCases.DoLogin">
      		<methods>
      			<include name="doLogin"/>
      			<include name="selectPortfolio"/>
      		</methods>
     	 </class>
      <class name="TestCases.StockManagement">
      	<methods>
	      	<include name="goToCompany"/>
	      	<include name="sellTheStock"/>
      	</methods>
      </class>
    </classes>
  </test> 
</suite> 
